<!DOCTYPE html>
<html>
    <head>
        <title>My Website</title>
        <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
        <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' />
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    </head>
  <body>




<main class="container">
    <div class="row">

        <h1 id="textLarge"><%= title %></h1>
    <br>
        <div>
            <a href="/product/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i>
                Add Products
            </a>
        </div>
        <br/>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">

                <!-- Header Row-->

                <tr>
                    <th class="text-center">Product Name</th>
                    <th class="text-center">Brand</th>
                    <th class="text-center">Quantity</th>
                    <th class="text-center">Price</th>
                    <th class="text-center">Location</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                        <tr>
                        <td class="text-center">  <%= itemName %></td>
                        <td class="text-center">  <%= brand %> </td>
                        <td class="text-center"><%= quantity %></td>
                        <td class="text-center"> <%= price %></td>
                        <td class="text-center"> <%= location %> </td>
                        <td class="text-center">
                            <a href="/product/edit/" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/product/delete/" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>

                    </tr>

            </table>
        </div>
    </div>
</main>
</body>
</html>




