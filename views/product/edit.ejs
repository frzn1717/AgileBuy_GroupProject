<%- include (`../partials/header`) %>

    <main class="container">
        <div class="row">
            <h1 id="textLarge"><%= title %></h1>
        <br>
            <div>
                <a href="/product/add" class="btn btn-primary align-self-end" role="button">
                    <i class="fas fa-plus-circle"></i>
                    Add New item
                </a>
            </div>
        <br/>
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Brand</th>
                        <th class="text-center">Category</th>
                        <th class="text-center">Quantity</th>                    
                        <th class="text-center">Price</th>                         
                        <th class="text-center">Description</th>                  
                        <th class="text-center" colspan="2">Actions</th>
                    </tr>
                    <% for(let count=0; count < product.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= product[count].name %></td>
                            <td class="text-center"><%= product[count].brand %></td>
                            <td class="text-center"><%= product[count].category %></td>
                            <td class="text-center"><%= product[count].quantity %></td>       
                            <td class="text-center"><%= product[count].price %></td>           
                            <td class="text-center"><%= product[count].description %></td>     
                            <td class="text-center">
                                <a href="/product/edit/<%= product[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i></a>
                            </td>
                            <td class="text-center">
                                <a href="/product/delete/<%= product[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>
    </main>

    <%- include ('../partials/footer') %>



