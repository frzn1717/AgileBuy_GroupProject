<!DOCTYPE html>
<html>
    <head>
        <title>My Website</title>
        <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
        <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' />
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    </head>
  <body>
    <div class="container py-4 p-0">
      <div class="p-0 px-4 py-4 mb-0 bg-dark text-white rounded-3">
          <div class="offset-md-3 col-md-6">
              <h1><%= title %></h1>
  
              <form class="form" method="POST">
                  <div class="form-group">
                      <input type="hidden"
                          name="id"
                          value="<%= item._id %>"
                      >
                      <label for="itemNameField">Item Name</label>
                      <input type="text" class="form-control"
                          id="itemField"
                          placeholder="new item name"
                          name="itemName" 
                          value="<%= item.name %>"
                          required>
                  </div>
                  <br>
                  <div class="form-group">
                      <label for="brandField">Brand</label>
                      <input type="text" class="form-control"
                      id="brandField"
                      placeholder="new brand name"
                      name="brandName" 
                      value="<%= item.brand %>"
                      required>
                  </div>
                  <br>
                  <div class="form-group">
                      <label for="categoryField">Category type</label>
                      <input type="text" class="form-control"
                      id="categoryField"
                      placeholder="category type"
                      name="category" 
                      value="<%= item.category %>"
                      >
                  </div>
                  <br>
                  <div class="form-group">
                    <label for="quantityField">Quantity</label>
                    <input type="number" class="form-control"
                    id="numberField"
                    placeholder="quantity"
                    name="quantity" 
                    value="<%= item.quantity %>"
                    >
                  </div>
                  <br>
                  <div class="form-group">
                    <label for="priceField">Price</label>
                    <input type="number" class="form-control"
                    id="priceField"
                    placeholder="new price"
                    name="price" 
                    value="<%= item.price %>"
                    >
                  </div>
                  <br>
                  <div class="form-group">
                    <label for="descriptionField">Description</label>
                    <input type="text" class="form-control"
                    id="descriptionField"
                    placeholder="description"
                    name="description" 
                    value="<%= item.description %>"
                    >
                  </div>
                  <br>
  
                  <button class="btn btn-dark p-2" type="submit">
                      <i class="fas fa-check"></i>
                      <span class="px-1">Submit</span>
                  </button>
                  
                  <a href="/product/list" class="btn btn-dark p-2">
                      <i class="fas fa-undo"></i> 
                      <span class="px-1">Cancel</span>
                  </a> 
              </form>
          </div> 
      </div>
  </div>

  </body>
</html>



 