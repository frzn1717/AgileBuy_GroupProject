
<%- include ('../partials/header') %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 id="textLarge"><%= title %></h1>

            <form class="form" method="POST" >
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= product._id %>"
                    >
                    <label for="nameTextField">Product Name</label>
                    <input type="text" class="form-control " 
                        id="nameTextField"
                        placeholder="enter your product name"
                        name="name" 
                        value="<%= product.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="numberTextField">Brand</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="enter your brand name"
                    name="name" 
                    value="<%= product.name %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="numberTextField">Quantity</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="enter your quantity"
                    name="number" 
                    value="<%= product.number %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="numberTextField">Price</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="enter your price"
                    name="number" 
                    value="<%= product.number %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emmailTextField"
                    placeholder="enter your email address"
                    name="email" 
                    value="<%= business.email %>"
                    >
                </div>
                <br />
                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/business/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>